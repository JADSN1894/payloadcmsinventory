{
    "name": "payload-next-blog",
    "version": "1.0.0",
    "description": "A blank template to get started with Payload 3.0",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
        "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
        "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
        "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
        "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
        "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
        "format": "prettier . --write",
        "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
        "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
        "seed": "tsx -r dotenv/config src/scripts/seed/script.ts",
        "nuke": "psql -d payload_next_blog -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\" && pnpm payload migrate:fresh && pnpm seed"
    },
    "dependencies": {
        "@payloadcms/db-postgres": "3.68.5",
        "@payloadcms/next": "3.68.5",
        "@payloadcms/richtext-lexical": "3.68.5",
        "@payloadcms/ui": "3.68.5",
        "@plaiceholder/next": "3.0.0",
        "@t3-oss/env-nextjs": "0.13.10",
        "@tailwindcss/postcss": "4.1.18",
        "@tailwindcss/typography": "0.5.19",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cross-env": "10.1.0",
        "dotenv": "17.2.3",
        "graphql": "16.8.1",
        "lucide-react": "^0.561.0",
        "next": "16.0.10",
        "next-themes": "0.4.6",
        "payload": "3.68.5",
        "plaiceholder": "3.0.0",
        "postcss": "8.5.6",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "sharp": "0.34.5",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "4.1.17",
        "zod": "4.1.12"
    },
    "devDependencies": {
        "@faker-js/faker": "10.1.0",
        "@playwright/test": "1.56.1",
        "@testing-library/react": "16.3.1",
        "@types/node": "25.0.2",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "@vitejs/plugin-react": "5.1.2",
        "eslint": "9.39.2",
        "eslint-config-next": "16.0.10",
        "jsdom": "27.3.0",
        "playwright": "1.56.1",
        "playwright-core": "1.56.1",
        "prettier": "3.7.4",
        "tw-animate-css": "^1.4.0",
        "typescript": "5.9.3",
        "vite-tsconfig-paths": "6.0.1",
        "vitest": "4.0.15"
    },
    "engines": {
        "node": "24.12.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "sharp",
            "esbuild",
            "unrs-resolver"
        ]
    }
}
